<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MenuTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>


    <style name="loginEditTextLayoutTheme">
        <item name="theme">@style/loginHintAppearanceTheme</item>
        <!--        <item name="passwordToggleEnabled">true</item>-->
        <item name="android:textColor">@color/login_input_text</item>
        <!-- Password visible/invisible button color -->
        <item name="passwordToggleTint">@color/login_input_tint</item>
        <!-- EditText hint color -->
        <item name="android:textColorHint">@color/login_input_tint</item>

        <!-- <item name="hintTextAppearance">@style/loginHintAppearanceTheme</item>-->
        <item name="android:backgroundTint">@color/login_input_tint</item>

        <!-- Underline color override from primary color -->
        <item name="boxStrokeColor">@color/login_input_tint</item>

    </style>

    <style name="loginEditTextTheme">
        <!--        <item name="android:inputType">textPassword</item>-->
       <!-- <item name="singleLine">true</item>-->
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/login_input_text</item>
        <item name="android:textColorHint">@drawable/hint_selector</item>

        <item name="android:imeOptions">actionDone</item>

        <!-- Edit text underline color -->
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="loginHintAppearanceTheme">
        <!-- Boja texta i underline-a kada je input field u focusu -->
        <item name="colorPrimary">@color/login_input_tint</item>
       <!-- <item name="android:textSize">12sp</item>-->
        <item name="colorAccent">@color/login_input_tint</item>
        <item name="colorOnPrimary">@color/login_input_tint</item>
    </style>

</resources>